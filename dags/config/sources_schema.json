{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ETL Sources Configuration",
  "description": "JSON Schema для валидации конфигурации ETL-источников (sources.yaml)",
  "type": "object",
  "required": ["target", "sources"],
  "properties": {
    "target": {
      "type": "object",
      "required": ["host", "port", "database", "user", "password"],
      "properties": {
        "host": { "type": "string" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "database": { "type": "string" },
        "user": { "type": "string" },
        "password": { "type": "string" }
      },
      "additionalProperties": false
    },
    "defaults": {
      "type": "object",
      "properties": {
        "chunk_size": { "type": "integer", "minimum": 100 },
        "truncate_before_load": { "type": "boolean" },
        "schedule_interval": { "type": "string" },
        "retries": { "type": "integer", "minimum": 0 },
        "retry_delay_minutes": { "type": "integer", "minimum": 1 },
        "sla_minutes": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "host", "port", "database", "user", "password", "tables"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$",
            "description": "Уникальный идентификатор источника (snake_case)"
          },
          "description": { "type": "string" },
          "host": { "type": "string" },
          "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
          "database": { "type": "string" },
          "user": { "type": "string" },
          "password": { "type": "string" },
          "schedule_interval": { "type": "string" },
          "tables": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["source_schema", "source_table", "target_schema", "target_table"],
              "properties": {
                "source_schema": { "type": "string" },
                "source_table": { "type": "string" },
                "target_schema": { "type": "string" },
                "target_table": { "type": "string" },
                "chunk_size": { "type": "integer", "minimum": 100 },
                "truncate_before_load": { "type": "boolean" },
                "columns": { "type": "string" },
                "where_clause": { "type": "string" }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
